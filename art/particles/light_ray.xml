<?xml version="1.0" encoding="utf-8"?>
<particles>
    <texture>art/textures/particles/light_ray.png</texture>
    <blend mode="add"/>
    <constant name="emissionrate" value="0.5"/>
    <uniform name="lifetime" min="2" max="20"/>
	<uniform name="position.x" min="-1.5" max="1.5"/>
	<uniform name="position.y" min="0" max="20"/>
    <uniform name="position.z" min="-1.5" max="1.5"/>
    <uniform name="velocity.y" min="0.8" max="1.1"/>
    <uniform name="size" min="10.0" max="20.0"/>
    <uniform name="color.b" min="9.5" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>
</particles>
