<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/blowing_sand.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="12.0"/>
    <uniform name="lifetime" min="5.0" max="12.0"/>

    <uniform name="position.x" min="-80.0" max="80.0"/>
    <uniform name="position.z" min="-80.0" max="80.0"/>
    <uniform name="position.y" min="1.0" max="2.0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.25" max="0.25"/>
    <uniform name="velocity.y" min="-0.25" max="1.5"/>
    <uniform name="velocity.z" min="-1.5" max="1.0"/>
    <uniform name="velocity.angle" min="-1.0" max="1.0"/>

    <uniform name="size" min="10.0" max="25.0"/>
	<constant name="size.growthRate" value="20.0"/>

    <force y="0.25"/>

</particles>
